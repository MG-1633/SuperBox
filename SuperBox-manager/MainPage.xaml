            <Label Text="Bun venit," 
               FontSize="20"  
               HorizontalOptions="Fill" />
            <Label Text="" 
                   x:Name="userName"
               FontSize="34" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
                   Margin="0,30,0,70"/>

            <Button
                x:Name="CounterBtn"
                Text="Click me" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="ButtonMakeNewDelivery"
                Text="Make New Delivery" 
                Clicked="ButtonMakeNewDelivery_OnClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="ButtonShowPlacedOrders"
                Text="Show Placed Orders" 
                Clicked="ButtonShowPlacedOrders_OnClicked"
                HorizontalOptions="Fill" />

            <CollectionView x:Name="viewComenzi" >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10">
                            <VerticalStackLayout>
                                
                                <HorizontalStackLayout>
                                    <Label Text="{Binding From}" Margin="0,0,5,0"/>
                                    <Label Text="{Binding To}" Margin="0,5,0,0"/>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout>
                                    <Label Text="{Binding reciver}" Margin="0,0,5,0"/>
                                    <Label Text="{Binding sender}" Margin="0,5,0,0"/>
                                </HorizontalStackLayout>
                                
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <Button
                x:Name="ButtonShowIncomingOrders"
                Text="Show Incoming Orders" 
                Clicked="ButtonShowIncomingOrders_OnClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="ButtonMakeMeAdmin"
                Text="Make Me Admin" 
                Clicked="ButtonMakeMeAdmin_OnClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="ButtonBackToLogIn"
                Text="Back To LogIn" 
                Clicked="ButtonBackToLogIn_OnClicked"
                HorizontalOptions="Fill" /> 
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
